    <table border="1" style="width:600px">
        <caption>우리집게시판</caption>
        <colgroup>
            <col width='8%' />
            <col width='*%' />
            <col width='15%' />
            <col width='15%' />
        </colgroup>
        <thead>
            <tr>
                <th>글번호</th>
                <th>제목</th>
                <th>작성자</th>
                <th>작성일</th>
            </tr>
        </thead>
        <tbody>
        <%
             for(var i=0; i<rows.length; i++) {
        %>
            <tr>
                <td><%=rows.length-i%></td>
                <td><a href='boardRead?brdno=<%=rows[i].brdno%>'><%=rows[i].brdtitle%></a></td>
                <td><%=rows[i].brdwriter%></td>
                <td><%=rows[i].brddate%></td>
            </tr>
        <%
             }
        %>
        </tbody>
    </table>   

